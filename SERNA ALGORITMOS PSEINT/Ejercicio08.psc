	// Hacer un algoritmo que lea el nombre de una persona y número de horas que estudia en la semana.
	
	// DEFINICION VARIABLES
	Definir nombrePersona como cadena;
	Definir numeroHoras Como Entero;
	
	// ENTRADA DATOS
	nombrePersona <- "Juancho";
	numeroHoras <- 18;
	
	// SALIDA DATOS
	Escribir "El nombre de la persona es: ", nombrePersona;
	Escribir "El numero de horas que estudia es: ", numeroHoras, " horas ";
	
