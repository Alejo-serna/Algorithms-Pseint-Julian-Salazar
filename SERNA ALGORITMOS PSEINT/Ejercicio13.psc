	// Ejercicio13
	// Pedir el radio de un círculo y calcular su área. A=PI*r^2.
	
	// DEFINICION VARIABLES
	Definir radioCirculo, areaCirculo, resultado Como Real;
	
	// ENTRADA DATOS
	Escribir "El radio del circulo es: ";
	Leer radioCirculo;
	
	// ASIGNACION DATOS
	resultado <- PI * (radioCirculo * 2);
	
	// SALIDA DATOS
	Escribir "El radio del circulo es: ", radioCirculo;
	Escribir "El area del circulo es: ", resultado;
	
FinProceso
